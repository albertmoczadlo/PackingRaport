<p class="d-inline-block">Data: @DateTime.Now.ToString("yyyy-MM-dd")</p>

<div class="d-flex justify-content-between">
    <form method="get">
        <p>
            Find by: <input type="date" name="searchDate" />

            <select name="searchType">
                <option value="">--Wybierz produkt--</option>
                @foreach (var item in Enum.GetValues(typeof(TypeProduct)))
                {
                    <option value="@item">@item</option>
                }
            </select>

            <input type="submit" value="Filter" />
        </p>
    </form>
    <p class="d-inline-block p-2">
        <a asp-action="Create" class="btn btn-secondary">Dodaj nową produkcję</a>
    </p>
</div>

<table class="table  table-bordered">
    <thead class="thead-light">
        <tr>
            @*<th>Id</th>*@
            <th scope="col">Dzień tygodnia</th>
            <th scope="col">Imie</th>
            <th scope="col">Nazwisko</th>
            <th scope="col">Produkt</th>
            <th scope="col">Start Produkcji</th>
            <th scope="col">Koniec Produkcji</th>
            <th scope="col">Zbiornik</th>
            <th scope="col">Ilość</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var raport in Model)
        {
            <tr>
                @*<td>@raport.Id</td>*@
                <td>@raport.Day.ToString()</td>
                <td>@raport.User.Name</td>
                <td>@raport.User.Surname</td>
                <td>@raport.Product.ProductName</td>
                <td>@raport.StartProductionTime.ToString("dd.MM.yyyy")</td>
                <td>@raport.EndProductionTime</td>
                <td>@raport.Containers.Type</td>
                <td>@raport.Quantity</td>

                <td class="d-flex justify-content-center">
                    <input type="button" value="Szczegóły" class="btn btn-outline-secondary btn-sm align-text-bottom mx-1" onclick="location.href='@Url.Action("Details", "Raport",new { Id = raport.Id } )'" />
                    <input type="button" value="Usuń" class="btn btn-outline-secondary btn-sm align-text-bottom mx-1" onclick="location.href='@Url.Action("Delete", "Raport",new { Id = raport.Id } )'" />
                    <input type="button" value="Edytuj" class="btn btn-outline-secondary btn-sm align-text-bottom mx-1" onclick="location.href='@Url.Action("Edit", "Raport",new { Id = raport.Id } )'" />
                </td>

          @*      <td class="d-flex justify-content-center ">

