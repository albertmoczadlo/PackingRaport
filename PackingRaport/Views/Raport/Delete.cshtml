@model PackingRaport.ViewModels.RaportViewModel;

@{
    ViewData["Title"] = $"Delete user";
}

<h2>Delete @Model.</h2>

<p>Czy napewno chcesz usunąć raport o numerze @Model.Id?</p>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartProductionTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartProductionTime)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndProductionTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndProductionTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" value="@Model.Id" name="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-secondary btn-sm align-text-bottom" />
        <input type="button" value="Back to List" class="btn btn-outline-secondary btn-sm align-text-bottom" onclick="location.href='@Url.Action("Index", "Raport" )'" />

    </form>
</div>


